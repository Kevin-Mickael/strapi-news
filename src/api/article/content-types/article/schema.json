{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": "Blog articles for Creaty"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "description": {
            "type": "text"
        },
        "content": {
            "type": "richtext"
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "category": {
            "type": "string",
            "default": "NEWS"
        },
        "author": {
            "type": "string"
        },
        "readTime": {
            "type": "integer",
            "default": 5
        },
        "pinned": {
            "type": "boolean",
            "default": false
        },
        "comments": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::comment.comment",
            "mappedBy": "article"
        }
    }
}