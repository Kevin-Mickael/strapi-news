{
    "collectionName": "components_shared_seo",
    "info": {
        "displayName": "SEO",
        "icon": "search",
        "description": "SEO metadata for pages and articles"
    },
    "options": {},
    "attributes": {
        "metaTitle": {
            "type": "string",
            "required": true,
            "maxLength": 60
        },
        "metaDescription": {
            "type": "text",
            "required": true,
            "maxLength": 160
        },
        "metaKeywords": {
            "type": "string"
        },
        "ogImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "multiple": false
        },
        "canonicalURL": {
            "type": "string"
        },
        "noIndex": {
            "type": "boolean",
            "default": false
        }
    }
}